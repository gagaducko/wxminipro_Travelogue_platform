/* pages/choose/choose.wxss */

page {
	background: radial-gradient(200% 100% at bottom center, #b0e2bf, #88cee4);
}

.content {
	width: 100%;
	height: 100%;
	display: flex;
	flex-direction: row;
}

::-webkit-scrollbar {
	width: 0;
	height: 0;
	color: transparent;
}

.left {
	width: 25%;
	height: 100%;
}

.province {
	height: 80rpx;
	width: 90%;
	color: #333;
	font-size: 26rpx;
	text-align: center;
	line-height: 80rpx;
	background-color: white;
	border-radius: 10rpx;
	margin-bottom: 20rpx;
	margin-left: 10rpx;
}

.left .badge {
	background-color: red;
	width: 34rpx;
	height: 34rpx;
	border-radius: 50%;
	position: relative;
	top: -76rpx;
	left: 127rpx;
	border: 1rpx solid red;
	font-size: 22rpx;
	color: white;
	line-height: 34rpx;
}

.right {
	width: 75%;
	height: 100%;
	display: flex;
	flex-direction: row;
	flex-wrap: wrap;
	align-content: flex-start;
}

.city {
	height: 46rpx;
	border-radius: 10rpx;
	color: white;
	font-size: 24rpx;
	text-align: center;
	border: 1rpx solid #fff;
	line-height: 46rpx;
	margin: 10rpx 10rpx;
	padding: 4rpx 40rpx;
}

.selected {
	background-color: orange;
	color: #333;
}

.submit {
	height: 80rpx;
	width: 63%;
	border-radius: 40rpx;
	background-color: #333;
	color: #fff;
	line-height: 80rpx;
	position: fixed;
	bottom: 20rpx;
	right: 40rpx;
}