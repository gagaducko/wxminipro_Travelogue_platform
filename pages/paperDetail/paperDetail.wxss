/* pages/paperDetail/paperDetail.wxss */
.next_container{
    width: 55px;
    height: 55px;
    background: #2196F3;
    position: fixed;
    border-radius: 100px;
    display: flex;
    justify-content: center;
    align-items: center;
    box-shadow:rgba(0, 132, 255, 0.8) 0px 0px 20px;
    bottom: 100px;
    right: 15px;
  }
  .next_container_hover{
    background: #2195f3cc;
  }
  .next_image{
    width: 25px;
    height: 25px;
  }
  /* 悬浮日期 */
  .date{
    position: fixed;
    right: 15px;
    bottom: 170px;
    color: white;
    font-size: 14px;
    padding-left: 10px;
    padding-right: 10px;
    padding-top: 3px;
    padding-bottom: 3px;
    background: #2196F3;
    border-radius: 3.5px;
    box-shadow:rgba(0, 132, 255, 0.8) 0px 0px 20px;
  }
  /* 配图 */
  .image_container{
    height: 200px;
    position: relative;
  }

  .image_placeholder{
    width: 100%;
    height: 100%;
    position: absolute;
  }
  .image_title{
    position: absolute;
    left: 15px;
    right: 15px;
    bottom: 15px;
    color: rgb(0, 0, 0);
    font-size: 20px;
    font-weight: bold;
  }
  .details_container{
    padding-left: 15px;
    padding-right: 15px;
    padding-top: 15px;
    padding-bottom: 130px;
  }
  .details{
    color: #3b424c;
    font-size: 16px;
    text-indent: 2em;
  }

  
.top {
	width: 100%;
	height: 140px;
	background: #88cee4;
	padding-top: 15px;
	position: relative;
}

.center {
	width: 95%;
	height: 100px;
	align-items: center;
	justify-content: center;
	background: white;
	display: flex;
	flex-direction: column;
	margin: 0 auto;
	border-radius: 5px;
}

.center_top {
	display: flex;
	flex-direction: row;
	width: 80%;
	height: 80px;
	align-items: center;
	margin: 0 auto;
	border-bottom: 1px solid #EEEEEE;
}

.center_img {
	width: 66px;
	height: 66px;
	border-radius: 50%;
	overflow: hidden;
}

.center_img image {
	width: 100%;
	height: 100%;
	border-radius: 50%;
}

.center_img .user_head {
	width: 100%;
	height: 100%;
}

.center_info {
	display: flex;
	flex-direction: column;
	margin-left: 30px;
}

.center_name {
	font-size: 20px;
}

.center_phone {
	color: #BEBEBE;
}

.center_down {
	display: flex;
	flex-direction: row;
	width: 80%;
	height: 35px;
	margin: 0 auto;
	margin-top: 20rpx;
}

.center_rank {
	width: 50%;
	height: 35px;
	display: flex;
	flex-direction: row;
}

.rank_text {
	height: 35px;
	line-height: 35px;
	margin-left: 10rpx;
	color: #AAAAAA;
}

.center_rank image {
	width: 35px;
	height: 35px;
}

.center_score {
	width: 50%;
	height: 35px;
	display: flex;
	flex-direction: row;
}

.center_score image {
	width: 35px;
	height: 35px;
}

.gif-wave {
	position: absolute;
	width: 100%;
	bottom: 0;
	left: 0;
	z-index: 99;
	mix-blend-mode: screen;
	height: 100rpx;
}



/* border-radius: 98rpx;是控制按钮边变圆 */
.goodbutton {
    /* margin-top: 30px; */
    margin-right: 0;
    margin-left: auto;
	background-color: rgb(252, 126, 67);
	color: white;
	border-radius: 98rpx;
	background: bg_red;
  }
   
  /* 按下变颜色 */
  .hover {
	  top: 3rpx;
	  background:  rgb(236, 179, 156);
  }

.ql-container {
  box-sizing: border-box;
  width: 100%;
  height: 100%;
  font-size: 16px;
  line-height: 1.5;
  overflow: auto;
  padding: 10px 10px 20px 10px;
  border: 1px solid #ECECEC;
}

.ql-active {
  color: #22C704;
}

.iconfont {
  display: inline-block;
  width: 30px;
  height: 30px;
  cursor: pointer;
  font-size: 20px;
}

.toolbar {
  box-sizing: border-box;
  padding: 0 10px;
  height: 50px;
  width: 100%;
  position: fixed;
  left: 0;
  right: 100%;
  bottom: 0;
  display: flex;
  align-items: center;
  justify-content: space-between;
  border: 1px solid #ECECEC;
  border-left: none;
  border-right: none;
}

