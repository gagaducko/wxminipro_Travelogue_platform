.recommandTime{
    background-color: rgb(214, 191, 162);
    width: 100%;
    height: 3000rpx;
    margin-bottom: 100rpx;
}

.commandPart {
    font-size: xx-large;
    font-weight: 700;
    color:rgb(253, 80, 0);
    margin: 35rpx;
}

.commandPartIn{
    font-size: large;
    font-weight: 600;
    color:rgb(20, 7, 1);
    margin: 35rpx;
}


.cardPart {
	display: flex;
	flex-direction: column;
	align-items: center;
	justify-content: center;
}

.card {
	width: 90%;
	height: 150rpx;
	margin-bottom: 10rpx;
	margin-top: 40rpx;
	border-radius: 20px;
	/*4个边框圆角样式都为20px*/
	background-color: lightgray;
	box-shadow: 8rpx 4rpx 4rpx #707b8b;
	position: relative;
	border: 2rpx solid #707b8b;
	display: flex;
	flex-direction: column;
	align-items: center;
	justify-content: center;
}

.askPart {
	margin: 30rpx;
	height: 250rpx;
	align-self: start;
}

.askPart image {
	height: 60rpx;
	width: 60rpx;
	margin-right: 30rpx;
}

.askPart text {
	font-size: larger;
	font-weight: 600;
}