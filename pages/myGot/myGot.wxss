/**index.wxss**/

page {
	background: radial-gradient(200% 100% at bottom center, #b0e2bf, #88cee4);
}


/* 第三部分 */
.shareAbout {
display: flex;
align-items: center;
justify-content: center;
margin-top: 40rpx;
}

.extra {
display: flex;
flex-direction: column;
margin-top: 30rpx;
margin-bottom: 10rpx;
background-color:lightblue;
margin-bottom: 30rpx;
width: 90%;
align-items: center;
border: none;
border-radius: 15px;
box-shadow: 0 9px #999;
}

.icon-arrow {
background-color: lightblue;
margin-top: 15rpx;
margin-bottom: 15rpx;
position: relative;
}

/* 分割线 */
/*分割线样式*/
.divLine{
background: #E0E3DA;
width: 100%;
height: 5rpx;
}



/* 关于中间部分 */
.top_container
{
height: 320rpx;
width: 100%;
border-bottom: 1px solid #bfbfbf50;
}
.pd
{
padding: 0 30rpx;
}
.grey
{
color: #bfbfbf;
}
.small_icon
{
height: 40rpx;
width: 40rpx;
}
.flex
{
display: flex;
justify-content: space-between;
align-items: center;
}
.top_message
{
display: flex;
align-items: center;
height: 190rpx;
padding-top: 20rpx; 
}
.top_message_logo
{
height: 140rpx;
width: 140rpx;
}
.top_message_name
{
font-size: 36rpx;
padding-left: 40rpx;
}
.top_message_right
{
height: 32rpx;
width: 32rpx;
}
._right
{
float: right;
}

.focus_message
{
display: flex;
justify-content: space-around;
}
.focus_message_item
{
display: flex;
flex-direction: column;
align-items: center;
}
.focus_message_item a
{
font-weight: 500;
}
.focus_message_item text
{
font-size: 20rpx;
}

.myClass_message
{
display: flex;
justify-content: space-around;
align-items: center;
height: 180rpx;
}
.tspx
{
font-size: 26rpx;
margin-left: 20rpx;
}

.member_message
{
position: absolute;
top: -20rpx;
display: flex;
align-items: center;
justify-content: space-around;
height: 80rpx;
width: 640rpx;
margin: 0 40rpx;
border-radius: 10rpx;
padding-left:20rpx; 
background: #ebe6da;
background: -moz-linear-gradient(left, #ebe6da 0%, #ebb325 100%);
background: -webkit-linear-gradient(left, #ebe6da 0%, #ebb325 100%);
background: linear-gradient(to right, #ebe6da 0%, #ebb325 100%);
filter: progid:DXImageTransform.Microsoft.gradient( startColorstr='#ebe6da', endColorstr='#ebb325',GradientType=1 );
                            
}
.member_message image
{
height: 30rpx;
}
.member_message text
{
font-size: 25rpx;
margin-left: 25rpx;
}
.member_btn
{
text-align: center;
color: #ebb325;
height: 40rpx;
line-height: 40rpx;
width: 140rpx;
background-color: #000;
border-radius: 40rpx;
}

.card {
height: 220rpx;
margin-top:5rpx;
margin: 0 40rpx;
margin-bottom: 55rpx;
padding: 40rpx;
background-color: #fff;
border-radius: 10rpx; 
}

.card_small {
height: 60rpx;
margin-top:20rpx;
margin: 0 40rpx;
margin-bottom: 20rpx;
padding: 20rpx 40rpx;
background-color: #fff;
border-radius: 10rpx; 
}

.background_grey {
margin-top: -15rpx;
position: relative;
padding:100rpx 0;
/* background-color: #eee; */
width: 100%;
}

.my_sport_data_title {
font-size: 36rpx;
display: flex;
justify-content: space-between;
padding-bottom: 50rpx;
}
._data_number_title {
font-size: 28rpx;
}
.small_font {
font-size: 24rpx;
color: #999;
margin-left: 20rpx;
}
.alltime {
font-size: 50rpx;
font-weight: 500;
}


